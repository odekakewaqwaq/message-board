        <%= form_for(Message.new, :html =>{:class => "form-horizontal"}) do |f| %> 
        
        <!--エラー処理始まり-->
        <% if @message.errors.present? %>
            <div class="alert alert-danger">
                <%= alert %>
                     <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                        <li>
                            <%= full_message%>
                        </li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <!--エラー処理終わり-->
        
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">名前：</label>
                 <div class="col-sm-10">
                    <%= f.text_field :name, :class=>"form-control" %>
                </div>
            </div>
            <div class="form-group">
                <label for="body" class="col-sm-2 control-label">内容：</label>
                <div class="col-sm-10">
                    <%= f.text_area :body, :class => "form-control", :rows => 6 %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit :class =>"btn btn-primary" %>
                </div>
            </div>
        <% end %>
                </div>
        </div>
